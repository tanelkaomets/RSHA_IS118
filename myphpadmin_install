#!/bin/bash
#Vaatab kas phpadmin on installitud ning annab tulemuseks kas 0 v천i 1
myphp=$(dpkg-query -W -f='${status}' phpmyadmin 2>/dev/null | grep -c "ok installed")
#kui rida annab vastuseks 0 siis 체tleb, et phpadmin ei ole installitud
if [ $myphp -eq 0 ]; then
	echo "Myphpadmin ei ole paigaldatud"
	apt install -y phpmyadmin php-mbstring php-gettext
#T천mbab alla phpadmini
elif [ $myphp -eq 1 ]; then
#Kui rida annab vastuseks 1 siis 체tleb, et phpadmin on paigaldatud
	echo "myphpadmin on paigaldatud"
fi
